<p id="notice"><%= notice %></p>

<div class="container">
  <!-- Book Club Info small -->
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @book_club.cover.url(:medium) %>
    </div>
    <div class="col-md-9">
      <h2><%= @book_club.title %></h2>
      <p><em>By: <%= @book_club.author %></em></p>
      <p>Discussion Closes: <%= @book_club.end_date.strftime("%B %-d, %Y") %></p>
      <br>
    </div>
  </div>

  <hr>

  <!-- Topic Name -->
  <div class="row">
    <div class="col">
      <h2><%= @topic.name %></h2>
      <%= link_to 'Edit Topic', edit_book_club_topic_path(@topic.book_club, @topic) %> |
      <%= link_to 'Delete Topic', [@topic.book_club, @topic], method: :delete, data: { confirm: 'Are you sure?' } %> |
      <%= link_to 'Back to Book Club', book_club_path(@book_club) %>
    </div>
  </div>

  <!-- Show Topic Posts -->
  <div class="row">
    <div class="col">
      posts for this topic to go here
    </div>
  </div>

  <hr>

</div>
