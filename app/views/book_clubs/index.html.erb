<p id="notice"><%= notice %></p>

<h3>Current Book Clubs</h3>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_clubs.each do |book_club| %>
      <tr>
        <td><%= book_club.title %></td>
        <td><%= link_to 'Show', book_club %> | </td>
        <td><%= link_to 'Edit', edit_book_club_path(book_club) %> | </td>
        <td><%= link_to 'Destroy', book_club, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

